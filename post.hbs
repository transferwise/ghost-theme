{{!< default}}

{{> header}}

<article itemscope itemtype="http://schema.org/BlogPosting" role="article" class="{{post_class}}">
	{{#post}}
		<header>
			{{#if tags}}
				<div>
					Tags: {{tags separator=" | "}}
				</div>
			{{/if}}

			<time datetime="{{date format="YYYY-MM-DD"}}" itemprop="datePublished">
				{{date format='dddd DD MMM YYYY'}}
			</time>
			<h1 itemprop="name headline">
				<a href="{{url}}" itemprop="url" data-pjax title="{{title}}">
					{{title}}
				</a>
			</h1>
		</header>

		<div itemprop="articleBody">
			{{content}}
		</div>

		<div>
			{{! TODO include font-awesome }}
			<h4 class="share_uber">Spread the word</h4>
			<a href="#" data-action="share-twitter"><i class="fa fa-fw fa-lg fa-twitter"></i></a>
			<a href="#" data-action="share-facebook"><i class="fa fa-fw fa-lg fa-facebook"></i></a>
			<a href="#" data-action="share-gplus"><i class="fa fa-fw fa-lg fa-google-plus"></i></a>
		</div>

		{{#if author}}
			<div>
				<address itemscope itemtype="http://schema.org/Person">
					{{#if author.image}}
						<img src="{{author.image}}" itemprop="image" />
					{{/if}}
					<h4>
						<span itemprop="author">{{author.name}}</span>
					</h4>
				</address>
				<p>{{author.bio}}</p>
			</div>
		{{/if}}
	{{/post}}
</article>

{{> footer}}