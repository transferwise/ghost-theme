<div role="banner">
	{{#if @blog.logo}}
		<a href="{{@blog.url}}">
			<img src="{{@blog.logo}}" alt="{{@blog.title}}" />
		</a>
	{{/if}}

	<h1>
		<a title="{{@blog.title}}" href='{{@blog.url}}'>
			{{{@blog.title}}}
		</a>
	</h1>
	<p>
		<a title="{{@blog.title}}" href='{{@blog.url}}'>
			{{@blog.description}}
		</a>
	</p>
</div>